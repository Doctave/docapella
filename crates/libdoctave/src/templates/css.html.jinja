<style>
  :root {
    --scaling: 1;
    --radius-factor: 1;

    /* Breakpoints */
    --bp-xs: 520px;
    --bp-sm: 768px;
    --bp-md: 1024px;
    --bp-lg: 1280px;
    --bp-xl: 1600px;

    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.5rem;
    --space-6: 2rem;
    --space-7: 2.5rem;
    --space-8: 3rem;
    --space-9: 4rem;

    /* Prose content widths */
    --width-sm: 9rem;
    --width-md: 14rem;
    --width-lg: 20rem;
    --width-xl: 28rem;
    --width-full: 100%;

    /* Radius */
    --radius-1: calc(3px * var(--scaling) * var(--radius-factor));
    --radius-2: calc(4px * var(--scaling) * var(--radius-factor));
    --radius-3: calc(6px * var(--scaling) * var(--radius-factor));
    --radius-4: calc(8px * var(--scaling) * var(--radius-factor));
    --radius-5: calc(12px * var(--scaling) * var(--radius-factor));
    --radius-6: calc(16px * var(--scaling) * var(--radius-factor));
    --radius-full: 9999px;

    /* Typography */
    --text-xs: 0.75rem;
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-lg: 1.125rem;
    --text-xl: 1.25rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    --text-4xl: 2.25rem;
    --text-5xl: 3rem;
    --line-height-xs: calc(1 / 0.75);
    --line-height-sm: calc(1 / 0.875);
    --line-height-base: calc(1 / 1);
    --line-height-lg: calc(1 / 1.125);
    --line-height-xl: calc(1 / 1.25);
    --line-height-2xl: calc(1 / 1.5);
    --line-height-3xl: calc(1 / 1.875);
    --line-height-4xl: calc(1 / 2.25);
    --line-height-5xl: calc(1 / 3);
    --weight-light: 300;
    --weight-normal: 400;
    --weight-medium: 500;
    --weight-semibold: 600;
    --weight-bold: 700;

    /* Structure */
    --sidebar-width: 15rem;
    --header-top-height: 4rem;
    --header-bottom-height: 2.5rem;
    --header-height: calc(var(--header-top-height) + var(--header-bottom-height));
  }

  :target {
    scroll-margin-top: calc(var(--header-height) + var(--space-8));
  }

  [x-cloak] { display: none !important; }

  body {
    background: var(--background-color);

    color: var(--gray-12);

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Animations helpers */
  .rotate-90 {
    transform: rotate(90deg);
  }

  /* Dark mode */
  .dark-only {
    display: none;
  }

  .dark .dark-only {
    display: block;
  }

  .light-only {
    display: block;
  }

  .dark .light-only {
    display: none;
  }

  /* Misc */

  .divider[data-orientation="vertical"] {
    width: 1px;
    height: var(--space-4);
    background-color: var(--gray-4);
  }

  kbd.kbd-small {
    position: relative;
    top: -1px;
    display: inline-flex;
    align-items: center;
    padding: calc(var(--space-1) * 0.5) var(--space-1);
    border-radius: var(--radius-2);

    font-size: var(--text-xs);
    font-weight: var(--weight-medium);
    font-feature-settings: normal;
    font-variation-settings: normal;
    font-family: var(--font-sans);
    line-height: 1;

    color: var(--gray-11);
    background-color: var(--background-color);
    border: 1px solid var(--gray-4);
    border-bottom-width: 2px;

    box-shadow: 0 2px 0 0px var(--gray-4);
  }

  kbd.kbd-small:hover {
    border-bottom-width: 1px;
    top: 0px;
  }

  /* Page elements */
  article {
    max-width: 78ch;
    width: 100%;
  }

  button {
    border: none;
    background: none;
  }

  header {
    z-index: 10;
    border-bottom: 1px solid var(--gray-3);
    padding-left: var(--space-6);
    padding-right: var(--space-6);
    position: fixed;
    top: 0;
    background: var(--background-color);
    width: 100%;
    box-sizing: border-box;
  }

  header .logo img {
    max-height: 2rem;
  }

  header .header-top-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--bp-xl);
    margin-left: auto;
    margin-right: auto;

    height: var(--header-top-height);
  }

  header .header-bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--bp-xl);
    margin-left: auto;
    margin-right: auto;

    height: var(--header-bottom-height);
  }

  header #header-search-button {
    position: absolute;
    right: 50%;
    transform: translateX(50%);

    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
    width: calc(var(--space-9) * 3);  
    height: var(--space-6);
    border-radius: var(--radius-4);
    background-color: var(--gray-1);
    border: 1px solid var(--gray-3);
    padding-left: var(--space-2);
    padding-right: var(--space-2);
    cursor: pointer;

    font-size: var(--text-xs);
    font-weight: var(--weight-medium);
    color: var(--gray-10);
  }

  header #header-search-button:hover {
    background-color: var(--gray-2);
    color: var(--gray-11);
  }

  header #header-search-button svg {
    width: var(--space-4);
    height: var(--space-4);
  }

  header #header-search-button span {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
  }

  header .header-links {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    list-style: none;

    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
  }

  header .header-links a {
    color: var(--gray-11);
    text-decoration: none;
  }

  header .header-links a:hover {
    color: var(--accent-11);
  }

  header .header-tabs {
    display: flex;
    gap: var(--space-5);
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  header .header-tabs a {
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    line-height: var(--line-height-sm);
    text-decoration: none;
    color: var(--gray-11);
    height: var(--header-bottom-height);

    box-sizing: border-box;
    border-bottom: 2px solid transparent;

    display: flex;
    align-items: center;
  }

  header .header-tabs a:hover {
    color: var(--gray-12);
    border-bottom-color: var(--gray-10);
  }

  header .header-tabs a[data-current="true"] {
    color: var(--gray-12);
    border-bottom-color: var(--accent-11);
  }

  nav {
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    display: none;
    overscroll-behavior: contain;
  }

  @media (min-width: 1024px) {
    nav {
      display: block;
    }
  }

  .navigation-container {
    padding-top: var(--space-8);
    padding-bottom: var(--space-8);
    padding-left: 1rem;
    margin-left: -1rem;
    padding-right: var(--space-4);
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    position: fixed;
    top: var(--header-height);
    height: calc(100vh - var(--header-height) - calc(var(--space-8) * 2));
    overflow-y: auto;
    overscroll-behavior: contain;

    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  nav ul {
    list-style: none;
    padding: 0;
    box-sizing: border-box;
  }

  nav ul ul {
    padding-left: var(--space-4);
    border-left: 1px solid var(--gray-3);
  }

  nav section p {
    font-weight: 600;
    font-size: 14px;

    color: var(--gray-12);
  }

  nav ul li .navigation-item-label:hover {
    color: var(--gray-11);
    background: var(--gray-2);
  }

  nav ul li .navigation-item-label[data-current="true"] {
    background: var(--accent-2);
  }

  nav ul li .navigation-item-label[data-current="true"] a {
    color: var(--accent-10);
  }

  nav ul li .navigation-item-label[data-current="true"]:hover {
    background: var(--accent-3);
  }

  nav ul li .navigation-item-label[data-current="true"]:hover a {
    color: var(--accent-12);
  }

  nav .navigation-item-label {
    margin-top: 1px;
    margin-left: calc(var(--space-2) * -1);
    border-radius: var(--space-2);

    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  nav ul li a {
    word-break: break-word;
    display: flex;
    align-items: center;
    text-decoration: none;
    font-weight: var(--weight-medium);
    font-size: 14px;
    width: 100%;

    padding-left: var(--space-2);
    padding-right: var(--space-2);

    min-height: var(--space-6);
    color: var(--gray-11);
  }

  nav button.navigation-item-toggle {
    background: none;
    border: none;
    border-radius: var(--space-2);
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;

    color: var(--gray-11);
  }

  nav button.navigation-item-toggle svg {
    transition-property: transform, translate, scale, rotate;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  nav button.navigation-item-toggle:hover {
    background: var(--gray-3);
    color: var(--gray-12);
  }

  .page-outer-container {
    padding-left: var(--space-6);
    padding-right: var(--space-6);
    display: flex;
    flex-direction: column;

    flex-grow: 1;

    height: 100vh;
    overscroll-behavior: auto;
    overflow-y: auto;

    box-sizing: border-box;
  }

  .page-inner-container {
    flex-grow: 1;

    width: 100%;
    min-width: 0;
    max-width: var(--bp-xl);
    margin-left: auto;
    margin-right: auto;

    display: flex;
    justify-content: space-between;
    gap: var(--space-6);
  }

  .markdown-outer-container {
    padding-top: calc(var(--header-height) + var(--space-8));
    width: 100%;
    min-width: 0;
    flex-grow: 1;
    flex-shrink: 1;
    display: flex;
    justify-content: center;
  }

  .markdown-inner-container {
    flex-grow: 1;
    min-width: 0;
    max-width: 78ch;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: var(--space-7);
  }

  .on-this-page-outer-container {
    display: none;
    overscroll-behavior: contain;
    position: relative;
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);

    pointer-events: none;
  }

  @media (min-width: 1280px) {
    .on-this-page-outer-container {
      display: block;
    }
  }

  .on-this-page-inner-container {
    pointer-events: all;
    padding-top: var(--space-8);
    padding-bottom: var(--space-8);
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    position: fixed;
    top: var(--header-height);
    height: calc(100vh - var(--header-height) - calc(var(--space-8) * 2));
    overflow-y: auto;
    overscroll-behavior: contain;

    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .on-this-page-inner-container div {
    font-size: var(--text-xs);
    line-height: var(--line-height-xs);
    width: var(--sidebar-width);
    min-width: var(--sidebar-width);
    color: var(--gray-11);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .on-this-page-inner-container ul {
    list-style: none;
    padding: 0;
  }

  .on-this-page-inner-container a {
    display: block;
    font-size: var(--text-xs);
    line-height: var(--line-height-xs);
    color: var(--gray-11);
    text-decoration: none;
    border-left: 1px solid var(--gray-3);
    padding-left: var(--space-2);
    padding-top: var(--space-1);
    padding-bottom: var(--space-1);
  }

  .on-this-page-inner-container a:hover {
    color: var(--gray-12);
    border-color: var(--gray-12);
  }

  .on-this-page-inner-container a[data-level="1"] {
    padding-left: calc(var(--space-2) * 2);
  }

  .on-this-page-inner-container a[data-level="2"] {
    padding-left: calc(var(--space-2) * 3);
  }

  .on-this-page-inner-container a[data-level="3"] {
    padding-left: calc(var(--space-2) * 4);
  }

  .on-this-page-inner-container a[data-level="4"] {
    padding-left: calc(var(--space-2) * 5);
  }

  .footer-content {
    display: flex;
    padding-top: var(--space-6);
    padding-bottom: var(--space-6);
    justify-content: space-between;
    max-width: var(--bp-xl);
    margin-left: auto;
    margin-right: auto;
    border-top: 1px solid var(--gray-3);
  }

  .footer-content ul {
    list-style: none;
    display: flex;
    gap: var(--space-5);
    padding: 0;
  }

  footer .footer-links a {
    color: var(--gray-11);
    font-size: var(--text-sm);
    text-decoration: none;
  }

  footer .footer-links a:hover {
    color: var(--gray-11);
    text-decoration: underline;
  }

  footer .footer-socials a {
    opacity: 0.5;
  }

  footer .footer-socials a:hover {
    opacity: 0.7;
  }

  .dark footer .footer-socials a {
    filter: invert(1);
  }

  ul.breadcrumbs {
    margin: 0;
    margin-top: var(--space-2);
    list-style: none;
    display: flex;
    gap: var(--space-4);
    padding: 0;

    color: var(--accent-10);
    font-weight: 600;
  }

  .dark-mode-toggle {
    display: flex;
    align-items: center;

    height: var(--space-5);
    width: var(--space-5);

    background: none;
    border: none;
    border-radius: var(--radius-4);
    padding: 0;

    color: var(--gray-9);
    cursor: pointer;
  }

  .dark-mode-toggle:hover svg {
    color: var(--accent-11);
  }

  .dark-mode-toggle svg {
    height: 1rem;
    width: 1rem;
  }

  .dark .shiki,
  .dark .shiki span {
    color: var(--shiki-dark) !important;
    background-color: var(--shiki-dark-bg) !important;
    /* Optional, if you also want font styles */
    font-style: var(--shiki-dark-font-style) !important;
    font-weight: var(--shiki-dark-font-weight) !important;
    text-decoration: var(--shiki-dark-text-decoration) !important;
  }

  .shiki .highlighted-word {
    background-color: var(--gray-5);
    border: 1px solid var(--gray-8);
    padding: 1px 3px;
    margin: -1px -3px;
    border-radius: 4px;
  }

  /* WHITESPACE NOTATION */
  .shiki .tab,
  .shiki .space {
    position: relative;
  }

  .shiki .tab::before {
    content: "⇥";
    position: absolute;
    opacity: 0.3;
  }

  .shiki .space::before {
    content: "·";
    position: absolute;
    opacity: 0.3;
  }

  .error-page {
    margin-top: calc(var(--header-height) + var(--space-8));
    margin-left: auto;
    margin-right: auto;
    width: var(--bp-sm);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);

    .page-error-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-6);

      .page-error {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
      }

      .error-header {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
      }
    }

    h1 {
      font-size: var(--text-2xl);
      font-weight: var(--weight-bold);
      color: var(--gray-12);

      display: flex;
      align-items: center;
      gap: var(--space-2);

      svg {
        width: var(--space-5);
        height: var(--space-5);
        color: var(--ruby-11);
      }
    }

    h2 {
      font-size: var(--text-lg);
      font-weight: var(--weight-medium);
      color: var(--ruby-11);
      margin-top: 0;
      margin-bottom: 0;
    }

    .error-file {
      font-size: var(--text-sm);
      color: var(--gray-11);
      font-weight: var(--weight-medium);
      font-family: var(--font-mono);
    }

    pre {
      margin: 0;
      padding: var(--space-5);
      font-size: var(--text-sm);
      font-weight: var(--weight-medium);
      width: 100%;
    }
  }

  .navigation-error {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);

    h2 {
      color: var(--gray-12);
      font-weight: var(--weight-medium);
      font-size: var(--text-lg);
      margin: 0;
    }

    p {
      margin: 0;
    }

    .navigation-error-item {
      display: flex;
      flex-direction: column;
      gap: var(--space-3);

      .navigation-error-item-header {
        display: flex;
        flex-direction: column;
        font-size: var(--text-sm);

        code {
          font-size: var(--text-xs);
          color: var(--gray-11);
        }

        p {
          color: var(--ruby-11);
        }
      }

      .navigation-error-description {
        margin: 0;
        font-size: var(--text-xs);
        font-weight: var(--weight-medium);
        max-width: 100%;
        width: 100%;
      }
    }
  }

  {% include "css-prose.css" %}
  {% include "css-builtin-components.css" %}
  {% include "css-openapi.css" %}
  {% include "css-search-modal.css" %}
</style>
